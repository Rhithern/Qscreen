{
  "name": "interview-platform",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:railway": "pnpm --filter @ai-interviewer/embed-sdk build && pnpm --filter @ai-interviewer/server build",
    "start:railway": "pnpm --filter @ai-interviewer/server start",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:frontend\"",
    "dev:server": "pnpm --filter @ai-interviewer/server dev",
    "dev:frontend": "pnpm --filter @ai-interviewer/frontend dev",
    "start": "pnpm --filter @ai-interviewer/server start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "clean": "turbo clean",
    "doctor": "tsx scripts/doctor.ts",
    "setup": "tsx scripts/setup.ts",
    "seed:dev": "tsx scripts/seed.ts",
    "verify": "tsx scripts/verify.ts",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:conductor\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:conductor": "cd apps/conductor && npm run dev",
    "up": "pm2 start ecosystem.config.js",
    "down": "pm2 stop ecosystem.config.js",
    "logs": "pm2 logs",
    "bg:restart": "pm2 restart all",
    "bg:status": "pm2 status",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.19.11",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.4",
    "pm2": "^5.4.3",
    "prettier": "^3.0.0",
    "turbo": "^1.13.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-slider": "^1.3.6",
    "@supabase/supabase-js": "^2.56.1",
    "framer-motion": "^12.23.12",
    "resend": "6.2.0-preview-contacts.0"
  }
}
